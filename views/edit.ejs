<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- styles -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!--font-aweseme-->
    <link href="/stylesheets/fontawesome-free-5.12.1-web/css/all.min.css" rel="stylesheet">
    <title>edit profile</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
   
    <script src="/javascripts/edit.js"></script>
</head>

<body class="bg" onload="initedit()">

<div class="container" style="margin-top: 9%;">
    <!--buttons-->
    <a href="./profile" class="btn btn-outline-primary fixed-left">
        cancel
    </a>


    <button onclick="save()" class="btn btn-outline-primary fixed-right">
        save
    </button>

    <!-- profile data-->
    <div class="center">
        <div class="user-avatar"> </div>
    </div>

    <div class="text-center">
        <h6 class=" mt-3 text-white" id="created"></h6>
        <!-- <p class="bio mt-2 text-white">user bio</p> -->
    </div>

    <div class="row justify-content-center">
        <div class="col-sm-7 col-md-4">
            <div class="row">

                <form id="signupForm"  onsubmit="onSubmit()">
                    <div class="alert alert-success" id="results" style="display: none;">
                        
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input type="text" name="username" id="username" class="form-control" placeholder="Name : Username">
                        </div>
                    </div>


                    <div class="col-12 ">
                        <div class="form-group">
                            <textarea rows="4" name="bio" id="bio" placeholder="bio....." class="form-control"></textarea>
                        </div>
                    </div>


                    <div class="col-12 ">
                        <div class="form-group">
                            <input type="email" name="email_address" id="email_address"  class="form-control" placeholder="Email : User Email">
                        </div>
                    </div>


                    <div class="col-12 ">
                        <div class="form-group">
                            <input type="password" name="password" id="password"  class="form-control" placeholder="Password : User Password">
                        </div>
                    </div>


                    <div class="p-3">
                        <input type="submit" value="Update"  class="btn btn-outline-primary btn-block">
                    </div>



                </form>
            </div>
        </div>


    </div>




    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>

</html>